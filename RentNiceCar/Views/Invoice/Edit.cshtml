        <h4>Factuur</h4>
        <hr />

        <div class="form-group">
            Gebruiker: @user.Email
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.InvoiceId)
