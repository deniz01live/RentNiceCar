@using RentNiceCar.Models
@model RentNiceCar.Models.Invoice
@{
    ViewBag.Title = "Edit";
    ApplicationUser user = RentNiceCar.Controllers.InvoiceController.GetUserById(Model.UserId);
}
<h2>Edit</h2>
